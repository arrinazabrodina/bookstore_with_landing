@model IEnumerable<BookStoreWebApplication.Models.Worker>

@{
    ViewData["Title"] = "Працівники";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .contact-bar {
            position: fixed;
            bottom: 0;
            right: 0;
            background-color: lightgray;
            padding: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Працівники</h1>
        @if (ViewBag.BookingstoreAddress != null)
        {
            <h4>Книгарня @ViewBag.BookingstoreAddress</h4>
        }

        <p>
            <a asp-action="Create" class="btn btn-primary">Додати нового працівника</a>
        </p>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.BirthDate)</th>
                    <th>@Html.DisplayNameFor(model => model.Address)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    @if (ViewBag.NeedsToShowBookstoreAddress != false)
                    {
                        <th>@Html.DisplayNameFor(model => model.Bookstore.FullAddress)</th>
                    }
                    <th>Дії</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.BirthDate)</td>
                        <td>@Html.DisplayFor(modelItem => item.Address)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        @if (ViewBag.NeedsToShowBookstoreAddress != false)
                        {
                            <td>@Html.DisplayFor(modelItem => item.Bookstore.FullAddress)</td>
                        }
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Деталі</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Редагувати</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Видалити</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="contact-bar">
        Contact me! 097-777-33-22
    </div>
</body>
</html>
